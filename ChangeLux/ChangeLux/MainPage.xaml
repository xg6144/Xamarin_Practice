<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             x:Class="ChangeLux.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="LightSensor" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" />
        </Frame>
         <Grid HorizontalOptions="Center" VerticalOptions="Center">
             <Label Grid.Row="1" Grid.Column="0" x:Name="LightText"/>
             <Label Grid.Row="1" Grid.Column="1" x:Name="Description"/>
        </Grid>

        
    </StackLayout>
</ContentPage>